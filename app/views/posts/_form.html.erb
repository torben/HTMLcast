      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :class => 'mceEditor' %>
  </div>
  <div class="field">
    <%= f.select(:status_id, statuses_for_select(Post)) %>
  </div>
  <div class="field">
    <%= f.select :category_id, @categories %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
