<p id="notice"><%= notice %></p>

<p>
  <b>User:</b>
  <%= @post.user_id %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <b>Url name:</b>
  <%= @post.url_name %>
</p>

<p>
  <b>Status:</b>
  <%= status_for(@post) %>
</p>

<p>
  <b>Category:</b>
  <%= @post.category_id %>
</p>

<%= content_tag :h2, t(:comments, :scope => :comments) %>
<%= nested_comments @comments %>
<%= render :partial => 'comments/form', :locals => { :comment => @post.comments.build } %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
